<?xml version="1.0"?>
<rolemap>
  <roles>
    <role name="Elector" />
  </roles>
  <permissions>
    <permission
        name="collective.libreorganizacion: Add Proposal"
        acquire="True">
      <role name="Manager" />
      <role name="Elector" />
    </permission>
    <permission
        name="Reply to item"
        acquire="True">
      <role name="Manager" />
      <role name="Elector" />
    </permission>

    <!-- normal users can't change the display view -->
    <permission
        name="Modify view template"
        acquire="False">
      <role name="Manager" />
      <role name="Editor" />
    </permission>

    <!-- normal users can't share content by default -->
    <permission
        name="Sharing page: Delegate roles"
        acquire="False">
      <role name="Manager" />
      <role name="Editor" />
    </permission>

    <!-- support -->
    <permission
        name="Content Ratings: User Rate"
        acquire="False">
    </permission>

    <!-- voting -->
    <permission
        name="Popoll: Vote"
        acquire="False">
      <role name="Manager" />
      <role name="Editor" />
      <role name="Elector" />
    </permission>
    <permission
        name="Popoll: Edit polls"
        acquire="False">
      <role name="Manager" />
      <role name="Editor" />
    </permission>

  </permissions>
</rolemap>
